{
  "name": "leitner-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Leitner system language learning with Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "deploy": "node scripts/deploy-with-webhook.js",
    "deploy-only": "wrangler deploy",
    "setup-webhook": "node scripts/setup-webhook.js",
    "quick-setup": "node scripts/quick-setup.js",
    "remove-webhook": "node scripts/setup-webhook.js remove",
    "remove-webhook-quick": "node scripts/quick-setup.js remove",
    "logs": "wrangler tail",
    "logs:live": "wrangler tail --format=pretty",
    "analytics": "wrangler analytics",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "echo \"No linting configured yet\" && exit 0",
    "format": "echo \"No formatting configured yet\" && exit 0",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^4.34.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "dotenv": "^17.2.2",
    "node-fetch": "^3.3.2"
  }
}
