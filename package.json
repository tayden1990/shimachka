{
  "name": "leitner-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Leitner system language learning with Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "start": "wrangler dev --local",
    "logs": "wrangler tail",
    "logs:live": "wrangler tail --format=pretty",
    "logs:search": "wrangler tail --search",
    "debug": "wrangler dev --log-level debug",
    "analytics": "wrangler analytics",
    "health": "curl https://leitner-telegram-bot.t-ak-sa.workers.dev/health"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "dotenv": "^17.2.2",
    "node-fetch": "^3.3.2"
  }
}
